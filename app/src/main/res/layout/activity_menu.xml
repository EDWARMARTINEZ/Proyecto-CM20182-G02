<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="420dp"
        android:layout_height="511dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="28dp">

        <ImageView
            android:id="@+id/imgDiary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/diary2"
            tools:layout_editor_absoluteX="188dp" />

        <ImageView
            android:id="@+id/imgBreeding"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="-120dp"
            app:srcCompat="@drawable/cow4"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="28dp" />

        <TextView
            android:id="@+id/txtBreeding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:text="@string/s_breeding"
            android:textColor="@android:color/background_dark"
            android:textColorLink="@android:color/black"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="76dp"
            tools:layout_editor_absoluteY="144dp" />

        <TextView
            android:id="@+id/txtDiary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="-20dp"
            android:text="@string/s_diary"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="241dp"
            tools:layout_editor_absoluteY="151dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="180dp"
            app:srcCompat="@drawable/product"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="192dp" />

        <ImageView
            android:id="@+id/imgInventory"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="-130dp"
            app:srcCompat="@drawable/inventory"
            tools:layout_editor_absoluteX="202dp"
            tools:layout_editor_absoluteY="191dp" />

        <TextView
            android:id="@+id/txtInventory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="-10dp"
            android:text="@string/s_inventory"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="331dp" />

        <TextView
            android:id="@+id/txtProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="-20dp"
            android:text="@string/s_product"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="241dp"
            tools:layout_editor_absoluteY="331dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>